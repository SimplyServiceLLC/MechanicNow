
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isAdmin() {
      return request.auth.token.admin == true;
    }
    function isMechanic() {
      return request.auth.token.mechanic == true || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isMechanic == true;
    }

    // USER PROFILES
    match /users/{userId} {
      allow read: if isSignedIn() && (isOwner(userId) || isMechanic() || isAdmin());
      allow write: if isOwner(userId) || isAdmin();
    }

    // MECHANIC PROFILES
    match /mechanics/{mechanicId} {
      // Anyone can read mechanic lists (for booking), but specific sensitive fields should be protected via client-side logic or separate subcollections in a stricter app
      allow read: if true; 
      // Only the mechanic themselves or admin can update their profile (status, location, earnings)
      allow write: if isOwner(mechanicId) || isAdmin();
    }

    // JOB REQUESTS
    match /job_requests/{jobId} {
      // Customers can read/write their own jobs
      // Mechanics can read available jobs (NEW) or jobs assigned to them
      // Admins can read/write all
      allow read: if isSignedIn() && (
        resource.data.customerId == request.auth.uid || 
        resource.data.mechanicId == request.auth.uid || 
        (isMechanic() && resource.data.status == 'NEW') || 
        isAdmin()
      );
      
      allow create: if isSignedIn();
      
      allow update: if isSignedIn() && (
        resource.data.customerId == request.auth.uid || 
        resource.data.mechanicId == request.auth.uid || 
        (isMechanic() && resource.data.status == 'NEW') ||
        isAdmin()
      );
    }
    
    // SUPPORT TICKETS
    match /support_tickets/{ticketId} {
      allow create: if isSignedIn();
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow update: if isAdmin();
    }
  }
}
